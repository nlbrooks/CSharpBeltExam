@model Activity
<h1>Dojo Activity Center</h1>
<a asp-action="Home">Home</a>
<a asp-action="Logout">Log Out</a>

<form asp-action="CreateActivity" method="post">
<div class="form-group">
        <label asp-for="Name" id="Name"></label>
        <span asp-validation-for="Name" ></span>
        <input type="text" class="form-control" asp-for="Name" id="Name">
    </div>
    <div class="form-group">
        <label asp-for="Time" id="Time"></label>
        <span asp-validation-for="Time" ></span>
        <input type="time" class="form-control" asp-for="Time" id="Time" min="0:00" max="23:59">
    </div>
    <div class="form-group">
        <label asp-for="Date" id="Date"></label>
        <span asp-validation-for="Date" ></span>
        <input type="date" class="form-control" asp-for="Date" id="Date" >
    </div>
    <div class="form-group">
        <label asp-for="Duration" id="Duration"></label>
        <span asp-validation-for="Duration" ></span>
        <input type="text" class="form-control" asp-for="Duration" id="Duration">
        <select asp-for="DurationUnit" id="DurationUnit">
            <option value="Hours">Hours</option>
            <option value="Minutes">Minutes</option>
            <option value="Days">Days</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Description" id="Description"></label>
        <span asp-validation-for="Description" ></span>
        <textarea class="form-control" asp-for="Description" id="Description" ></textarea>
    </div>
    <input type="hidden" asp-for="UserId" value="@ViewBag.User">
    <button>Create Activity</button>
</form>